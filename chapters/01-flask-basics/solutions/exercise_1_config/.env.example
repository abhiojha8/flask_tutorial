# Flask Environment Configuration Example
# Copy this file to .env and update with your values

# Environment: development, testing, staging, production
FLASK_ENV=development

# Application Settings
APP_NAME="Flask Backend API"
API_VERSION="1.0"
API_TITLE="Professional Flask API"

# Security (REQUIRED in production)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database URLs
DEV_DATABASE_URL=sqlite:///dev.db
TEST_DATABASE_URL=sqlite:///:memory:
STAGING_DATABASE_URL=postgresql://user:pass@localhost/staging_db
DATABASE_URL=postgresql://user:pass@localhost/production_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@example.com

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN_STAGING=https://your-staging-sentry-dsn@sentry.io/project-id

# Feature Flags
FEATURE_REGISTRATION_ENABLED=true
FEATURE_SOCIAL_AUTH=false
FEATURE_TWO_FACTOR_AUTH=false

# Logging
LOG_LEVEL=INFO

# File Upload
UPLOAD_FOLDER=uploads